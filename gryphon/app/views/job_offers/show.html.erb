<div class="col-md-9">
	<h1>
	  <%= @job_offer.name %>
	</h1>


	<% if user_signed_in? %>

	  <%= link_to 'Like',
	      {:controller => :job_offers, :action => :like_job_offer,
	       :id => @job_offer.id}, {:method => :post, class: "like-offer"} %>

	<% end %>

	<pre class="job-desc"><%= @job_offer.description.strip %></pre>
</div>

<div class="col-md-3 similar-offers">
	<h3>Similar offers</h3>
	<%= render partial: 'offer_list', locals: {job_offers: @similar_offers}%>
</div>
